<Window x:Class="ManttoProductosAlternos.LaunchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Title="LaunchWindow" Width="525"
        Height="350"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Image HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Source="Resources/Books_512.png" />
        <telerik:RadBusyIndicator x:Name="BusyIndicator" Grid.Row="1"
                                  IsIndeterminate="True"
                                  telerik:StyleManager.Theme="Windows8Touch" />
    </Grid>
</Window>
